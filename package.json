{
  "name": "cron-expression-parser",
  "version": "1.0.0",
  "description": "A production-ready command line cron expression parser with comprehensive test coverage",
  "main": "dist/index.js",
  "bin": {
    "cron-parser": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "lint": "echo 'Linting would go here'",
    "prepare": "npm run build"
  },
  "keywords": [
    "cron",
    "parser",
    "cli",
    "typescript",
    "scheduler",
    "command-line"
  ],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/index.ts"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}